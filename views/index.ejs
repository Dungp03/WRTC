<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WRTC Chat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <div class="container mt-5">
      <!-- Chat Section -->
      <div id="div-chat">
        <div class="flex_box">
          <div class="flex__left">
            <div>
              <i id="toggle-online-user" class="fas fa-users icon-btn"></i>
              <p class="font-weight-bold d-inline">Online User:</p>
            </div>
            <ul id="ulUser" class="list-group mb-3" style="display: none"></ul>

            <div>
              <i id="toggle-your-id" class="fas fa-id-badge icon-btn"></i>
              <h3 id="mydiv" class="d-inline">Your ID:</h3>
            </div>

            <div>
                <!-- nháº­p user id -->
                <input type="text" id="remoteID" class="form-control mt-3" placeholder="Enter Remote ID"/>
                <button id="btnCall" class="btn btn-primary mt-3">Call</button>
            </div>

            <!-- video call -->
            <div id="your-id-section">
              <video id="localStream" width="100%" ></video>

              <div id="idtest" class="mt-3">
                <video id="remoteStream" width="100%" ></video>
              </div>
              
            </div>
          </div>

          <!-- Toggle Button for Chat -->
          <div id="toggle-message" >
            <i class="fas fa-comments"></i>
            <span id="unread-count" class="badge badge-danger position-absolute" style="top: -10px; right: -10px; display: none;">0</span>
          </div>

          <!-- Chat Section (Hidden by Default) -->
          <div id="message-section" style="display: none;">  <!-- Hide by default -->
            <div id="message-header">Message</div>
            <div id="message-body">
              <ul id="messages"></ul>
            </div>
            <div id="message-footer">
              <form id="messageForm">
                <div class="input-group">
                  <input
                    type="text"
                    id="m"
                    class="form-control"
                    placeholder="Enter your message"
                    required
                  />
                  <div class="input-group-append">
                    <button type="submit" class="btn btn-success">Send</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Sign Up Section -->
      <div id="div-dang-ky" class="mt-5">
        <input
          type="text"
          id="txtUsername"
          class="form-control"
          placeholder="Enter your username"
        />
        <button id="btnSignUp" class="btn btn-info mt-3">Sign Up</button>
      </div>
    </div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Socket.io and PeerJS Scripts -->
    <script src="js/jquery.js"></script>
    <script src="js/peerjs.js"></script>
    <script src="js/socket.io.js"></script>
    <script src="js/main.js"></script>

    <!-- Custom JS -->
    <script src="/js/script.js"></script>
  </body>
</html>
